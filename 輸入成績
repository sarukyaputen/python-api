score = []
total =0 
inscore = 0
#輸入成績，結束輸入-1
while(inscore !=-1):
    inscore = int(input("請輸入學生的成績："))
    score.append(inscore)
print("共有 %d 位學生" % (len(score) - 1))
for i in range(0, len(score) - 1):
     total += score[i]
#total=sum(score)
average = total / (len(score) - 1)
print("本班總成績：%d 分，平均成績：%.2f 分" % (total, average))
